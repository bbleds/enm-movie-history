{{#each movies}}
<div class="col-sm-4">
	<div id="movie-box">
		<img class="img" src="{{url}}" alt="{{Title}}">
		<a href="#" class="x-icon">
			<span id="{{imdbID}}" class="glyphicon glyphicon-remove" aria-hidden="true"></span>
		</a>
	</div>
	<div class="button-container-div">
		{{#if Type}}
		<button id="{{imdbID}}" poster="{{url}}" class="add-movie-to-collection">Add</button>
		{{else}}
			{{#if Watched}}
			<input id="{{imdbID}}" poster="{{url}}" class="rating" data-min="0" data-max="5" data-step="1" data-show-clear="false" data-show-caption="false" data-size="xs" value="{{Rating}}">
			{{else}}
			<button id="{{imdbID}}" poster="{{url}}" class="watched">Watched</button>
			{{/if}}
		{{/if}}
	</div>
</div>
{{/each}}
